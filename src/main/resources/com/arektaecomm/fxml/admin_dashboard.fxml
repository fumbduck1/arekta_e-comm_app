<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="16" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.arektaecomm.controller.AdminDashboardController"
      prefWidth="1000" prefHeight="700" minWidth="900" minHeight="600"
      style="-fx-padding: 32;">
  <HBox spacing="10" alignment="CENTER">
    <Button text="⬅️ Back" style="-fx-font-size: 18;" onAction="#onBack" />
    <Button text="Logout" onAction="#onLogout" styleClass="main-btn" />
  </HBox>
  <Label text="&#xE7EE;" style="-fx-font-family: 'Segoe MDL2 Assets'; -fx-font-size: 32;" styleClass="heading"/>
  <TabPane>
    <Tab text="Products">
      <VBox spacing="10">
        <Label text="Manage Products" styleClass="section-title"/>
        <TableView fx:id="productTable">
          <columns>
            <TableColumn text="ID" fx:id="idCol" />
            <TableColumn text="Name" fx:id="nameCol" />
            <TableColumn text="Price" fx:id="priceCol" />
            <TableColumn text="Stock" fx:id="stockCol" />
          </columns>
        </TableView>
        <Label fx:id="emptyProductLabel" text="No products available." visible="false" styleClass="empty-label"/>
        <HBox spacing="10">
          <TextField fx:id="nameField" promptText="Name" />
          <TextField fx:id="priceField" promptText="Price" />
          <TextField fx:id="stockField" promptText="Stock" />
          <TextField fx:id="imageUrlField" promptText="Image URL" />
          <TextField fx:id="descField" promptText="Description" />
          <Button fx:id="addUpdateBtn" text="Add/Update" onAction="#onAddOrUpdate"/>
          <Button fx:id="deleteBtn" text="Delete" onAction="#onDelete"/>
        </HBox>
      </VBox>
    </Tab>
    <Tab text="Orders">
      <VBox spacing="10">
        <Label text="Order Management" styleClass="section-title"/>
        <HBox spacing="8" alignment="CENTER_LEFT">
          <TextField fx:id="orderSearchField" promptText="Search by Order ID" prefWidth="200" />
          <Button text="Search" onAction="#onOrderSearch" />
          <Button text="Clear" onAction="#onOrderSearchClear" />
        </HBox>
        <TableView fx:id="orderTable" prefHeight="200">
          <columns>
            <TableColumn text="Order ID" fx:id="orderIdCol" />
            <TableColumn text="User" fx:id="orderUserCol" />
            <TableColumn text="Total" fx:id="orderTotalCol" />
            <TableColumn text="Status" fx:id="orderStatusCol" />
          </columns>
        </TableView>
        <Label fx:id="emptyOrderLabel" text="No orders found." visible="false" styleClass="empty-label"/>
        <HBox spacing="10">
          <Button fx:id="markShippedBtn" text="Mark Shipped" onAction="#onMarkShipped"/>
          <Button fx:id="markDeliveredBtn" text="Mark Delivered" onAction="#onMarkDelivered"/>
          <Button fx:id="refundBtn" text="Refund" onAction="#onRefund"/>
        </HBox>
        <Label fx:id="orderActionStatus" />
      </VBox>
    </Tab>
    <Tab text="Analytics">
      <VBox spacing="10" alignment="CENTER">
        <Label text="Analytics (Simulated)" styleClass="section-title"/>
        <Label text="(Note: Analytics are placeholders and not based on real data.)" styleClass="empty-label"/>
        <Label fx:id="totalSalesLabel"/>
        <Label fx:id="totalOrdersLabel"/>
        <Label fx:id="topProductLabel"/>
      </VBox>
    </Tab>
  </TabPane>
</VBox>